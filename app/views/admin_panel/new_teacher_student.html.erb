<div class="card">
  <% @user.each do |u| %>
    <div class="card">
      <%= u.id %>
      <%= u.name %>
        <%= u.email %>
      <%= link_to "Зробити вчителем", add_role_path(:id_user => u.id, :role => "Students", :class_room => 5), method: :get, :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>