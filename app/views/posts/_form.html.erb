<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_field :body, :class => 'ckeditor' %>
  </div>
  <div>
    <%= f.label :who %>
    <%= f.text_field :who , :value => @user_name %>
  </div>
  <div>
    <%= f.label :logo %>
    <%= f.file_field :logo %>
  </div>
  <div>
    <%= f.submit "Зберегти" %>
  </div>
<% end %>